root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 2

[{*.php,wiki}]
indent_size = 4

[*.rst]
indent_size = 3
max_line_length = 80

[Dockerfile]
indent_size = 3

[Makefile]
indent_style = tab
